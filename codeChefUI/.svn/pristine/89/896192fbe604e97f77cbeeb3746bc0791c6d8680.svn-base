<!--registration section-->
<div id="registration_frm" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md" style="color:black;">

    <!-- Modal content-->
    <div class="modal-content">
	 <div class="panel-heading btn-info">
	 <h3 class="panel-title" style="text-align:center;"><strong>عضویت در سامانه</strong></h3>
	 </div>
      <div class="modal-body">
		<div class="stepwizard">
    <div class="stepwizard-row setup-panel">
        <div class="stepwizard-step">
            <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
            <p>ورود اطلاعات</p>
        </div>
        <div class="stepwizard-step">
            <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
            <p>اعتبارسنجی</p>
        </div>
        <div class="stepwizard-step">
            <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
            <p>ورود به پنل</p>
        </div>
    </div>
</div>
<form role="form">
    <div class="row setup-content" id="step-1">
        <div class="col-xs-12">
            <div class="col-md-12">
                <h3> ورود اطلاعات</h3>
                <div class="form-group">
                    <label class="control-label">نام</label>
                    <input  maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name"  />
                </div>
                <div class="form-group">
                    <label class="control-label">نام خانوادگی</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Last Name" />
                </div>
				<div class="form-group">
                    <label class="control-label">تلفن همراه (نام کاربری)</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Phone Number" />
                </div>
				<div class="form-group">
                    <label class="control-label">ایمیل</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Email" />
                </div>
				<div class="form-group">
                    <label class="control-label">رمزعبور</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Pass" />
                </div>
				<div class="form-group">
                    <label class="control-label">تکرار رمزعبور</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Pass Again" />
                </div>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >مرحله ی بعد</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
            <div class="col-md-12">
                <h3>اعتبارسنجی</h3>
                <div class="form-group">
                    <label class="control-label">کد ارسالی به تلفن خود را وارد کنید</label>
                    <input maxlength="200" type="text" required="required" class="form-control" placeholder="Enter Validation Code" />
                </div>
				<a href="#" id="reGet" class="btn btn-danger btn-lg"><i>ارسال مجدد</i><i class="fa fa-repeat" aria-hidden="true"></i></a>
				
               <button class="btn btn-primary nextBtn btn-lg pull-right" style="margin-left:5px;" type="button" >مرحله ی بعد</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-3">
        <div class="col-xs-12">
            <div class="col-md-12">
                <h3>ورود به پنل</h3>
                <button class="btn btn-success btn-lg pull-right" type="submit">خاتمه</button>
            </div>
        </div>
    </div>
</form>


      </div>
     </div>

  </div>
</div>


<!--end of registration section-->
