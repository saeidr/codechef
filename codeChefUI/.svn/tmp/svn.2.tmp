<!--signin section-->
<div id="signin_frm" class="modal fade" role="dialog">
	<div class="modal-dialog modal-md" style="color: black;">
		<div class="modal-content">
		<button onclick="closeWin()" style="border: 0px solid #d6d9df; height: 28px; width: 28px; display: block; position: absolute; top: 10px; left: 12px; z-index: 1; cursor: pointer;">
		<img src="static/images/exit.png" alt="" width="35" height="25"></button>
			<div class="panel-heading btn-info">
				<h3 class="panel-title" style="text-align: center;">
					<strong>ورود به سامانه</strong>
				</h3>
			</div>
			<div class="modal-body">
				<form role="form">
					<div class="form-group">
						<span class="fa fa-user"></span> <label for="exampleInputEmail1">نام
							کاربری یا تلفن همراه</label> <input type="email"
							class="form-control" id="exampleInputEmail1"
							placeholder="Enter phone">
					</div>
					<div class="form-group">
						<i class="fa fa-lock" aria-hidden="true"></i> <label
							for="exampleInputPassword1">گذرواژه </label> <input
							type="password" class="form-control" id="exampleInputPassword1"
							placeholder="password">
					</div>
					<button type="button" class="btn btn-sm btn-primary">ورود</button>
					<button id="btn_open_register_section" type="button"
						class="btn btn-sm btn-primary">ثبت نام</button>
					<a href="/sessions/forgot_password" class="btn">کلمه
						عبور را فراموش کرده ام</a>
				</form>
			</div>
		</div>
	</div>
</div>
</div>
<!--end of signin section-->
